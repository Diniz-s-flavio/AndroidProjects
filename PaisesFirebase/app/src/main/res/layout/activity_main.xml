<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:text="@string/ma_pag_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/lableCoutriDC"/>
    <EditText
        android:id="@+id/etCoutriDC"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/lableCoutriName"/>
    <EditText
        android:id="@+id/etCoutriName"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/lableCoutriAcronym"/>
    <EditText
        android:id="@+id/etCoutriAcronym"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>